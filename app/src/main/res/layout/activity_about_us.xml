<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"> <!-- Warna putih tua -->

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/i_back"
            android:contentDescription="Back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <!-- Title Text -->
        <TextView
            android:id="@+id/dashboardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MotoRent"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

        <!-- Profile Icon (di pojok kanan atas) -->
        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logoaccount"
            android:contentDescription="Profile"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- Logo Aplikasi -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/logorent3"
        android:layout_marginBottom="16dp" />

    <!-- Nama Aplikasi -->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Rental Motor App"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <!-- Deskripsi Aplikasi -->
    <TextView
        android:id="@+id/app_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplikasi Rental Motor memudahkan Anda dalam menyewa motor secara cepat dan mudah. Nikmati layanan terbaik dengan berbagai pilihan motor."
        android:textSize="16sp"
        android:textColor="#555555"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Alamat Rental Motor -->
    <TextView
        android:id="@+id/rental_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat: Ciawigebang, Kec. Ciawigebang, Kabupaten Kuningan, Jawa Barat 45591"
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Informasi Developer -->
    <TextView
        android:id="@+id/developer_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dikembangkan oleh"
        android:textSize="16sp"
        android:textColor="#555555"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Panel Developer -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/dev1Image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/rifky"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/dev1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rifky Andryanto"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dev1Role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UI Designer"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
